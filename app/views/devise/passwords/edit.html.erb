<div class="container">
  <div class="row">
    <div class="col-lg-5 col-lg-offset-3">
      <h2>Cambiar mi contraseÃ±a</h2>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.password_field :password, :autofocus => true, class: 'form-control', placeholder: t('.new_password') %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('.password_confirmation') %>
      </div>
      <%= f.submit t('.changed_password'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>